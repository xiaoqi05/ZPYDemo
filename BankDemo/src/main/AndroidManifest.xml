<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zpy" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
        <activity
            android:name=".models.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="me.iwf.libs.PhotoPickerActivity"
            android:theme="@style/myTheme" />
        <activity
            android:name="me.iwf.libs.PhotoPagerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".models.splash"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".models.GuideActivity"
            android:label="@string/title_activity_guide" >
        </activity>
        <activity
            android:name=".models.UsercenterActivity"
            android:label="@string/title_activity_usercenter" >
        </activity>
        <activity
            android:name=".models.CheckActivity"
            android:label="@string/title_activity_check" >
        </activity>
    </application>

</manifest>
